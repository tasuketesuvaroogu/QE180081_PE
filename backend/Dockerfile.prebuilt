# Dockerfile for pre-built artifacts
# Build outside Docker with: dotnet publish -c Release -r linux-x64 --self-contained false -o ./publish

FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS final
WORKDIR /app

# Copy pre-built publish folder
COPY ./publish .

# Set default environment (can be overridden at runtime)
ENV ASPNETCORE_ENVIRONMENT=Production
ENV ASPNETCORE_URLS=http://+:8080

EXPOSE 8080
EXPOSE 8081

ENTRYPOINT ["dotnet", "MovieWatchlist.Api.dll"]
